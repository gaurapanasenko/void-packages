#depends="${sourcepkg}>=${version}_${revision}"
do_install() {
    chmod -R u+w noarch/share
    vmkdir usr/share/ppd/cms
    vinstall x86_64/libscmssc.so 644 usr/lib
    vcopy noarch/share usr
    vinstall x86_64/rastertospl 755 usr/lib/cups/filter rastertospl
    vinstall x86_64/rastertospl 755 usr/lib/cups/filter rastertosplc
}
